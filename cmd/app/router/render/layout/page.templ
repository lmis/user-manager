package layout

templ Page(serviceName string, title string, nonce string, csrfToken string, environment string, content func() templ.Component) {
    <!DOCTYPE html>
    <html lang="en">
        @head(title, nonce, csrfToken, environment)
    <body>
        <div class="flex flex-col justify-between min-h-screen" hx-boost="true" hx-history-elt>
            <header>
                @navbar(serviceName)
            </header>
            <main class="grow flex">
                @content()
            </main>
            @footer(serviceName)
        </div>
    </body>
    </html>
}